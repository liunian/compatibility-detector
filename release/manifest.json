      "detectors/invalid_list_item.js",
      "detectors/text_align.js",
      "detectors/center_element.js",
      "detectors/text_overflow_ellipsis.js",
      "detectors/shrink_to_fit_percentage_child.js",
      "detectors/overflow.js",
